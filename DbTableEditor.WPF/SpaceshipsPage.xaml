<Page x:Class="DbTableEditor.WPF.SpaceshipsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Spaceships">

    <Page.Resources>
        <CollectionViewSource x:Key="Fleets"
                              Source="{Binding Fleets}" />
        <CollectionViewSource x:Key="Shipyards"
                              Source="{Binding Shipyards}" />
    </Page.Resources>

    <Grid>
        <DataGrid Name="Grid"
                  ItemsSource="{Binding Path=Spaceships}"
                  RowEditEnding="GridOnRowEditEnding"
                  PreviewKeyDown="GridOnPreviewKeyDown"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}"
                                    Visibility="Collapsed" />
                <DataGridTextColumn Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Name" />
                <DataGridTextColumn Binding="{Binding Speed, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Speed" />
                <DataGridTextColumn Binding="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Capacity" />
                <DataGridTextColumn Binding="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Weight" />
                <DataGridTextColumn Binding="{Binding Energy, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Energy" />
                <DataGridTextColumn Binding="{Binding Firepower, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Firepower" />
                <DataGridTextColumn Binding="{Binding Hull, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Hull" />
                <DataGridTextColumn Binding="{Binding Staff, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Staff" />
                <DataGridTextColumn Binding="{Binding Fuel, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Fuel" />

                <DataGridComboBoxColumn Header="Fleet"
                                        ItemsSource="{Binding Source={StaticResource Fleets}}"
                                        SelectedValueBinding="{Binding Fleet, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridComboBoxColumn Header="Shipyard"
                                        ItemsSource="{Binding Source={StaticResource Shipyards}}"
                                        SelectedItemBinding="{Binding Shipyard, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
