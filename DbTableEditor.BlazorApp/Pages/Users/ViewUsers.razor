@page "/Users"
@attribute [Authorize]
@inject HttpClient HttpClient
@inject NavigationManager NavManager

@if (_usersLoaded)
{
    @if (Users != null)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Users)
                {
                    var currentUser = user;
                    <tr>
                        <th>@user.Username</th>
                        
                        <th>@user.Role</th>

                        <th>
                            <button class="btn btn-outline-secondary">Edit roles</button>
                            <button class="btn btn-outline-secondary">Change password</button>
                            <button @onclick="@(() => DeleteUser(currentUser))"
                                     class="btn btn-warning">Delete</button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <span>No users were created.</span>
    }
}
else
{
    <span>Loading...</span>
}

@code {

    [CascadingParameter] public Task<AuthenticationState> AuthState { get; set; }

    private List<UserInfo> Users { get; set; }
    private bool _usersLoaded;

    protected override async Task OnInitializedAsync()
    {
        var result = await HttpClient.GetJsonAsync<IEnumerable<UserInfo>>("api/accounts");
        Users = result.ToList();
        _usersLoaded = true;
    }

    private async Task DeleteUser(UserInfo user)
    {
        try
        {
            Users.Remove(user);
            await HttpClient.DeleteAsync($"api/accounts/{user.Id}");

            var state = await AuthState;
            if (state.User.Identity.Name == user.Username)
            {
                NavManager.NavigateTo("logout");
            }
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }

}
